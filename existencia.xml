<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.ecuasolutions.sicimovile.ReporteExistencia"
    tools:showIn="@layout/activity_existencia"
    android:background="@color/dividerColor">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:background="@color/dividerColor">

        <androidx.cardview.widget.CardView
            xmlns:card_view="http://schemas.android.com/apk/res-auto"
            android:id="@+id/card_view4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            card_view:cardCornerRadius="16dp"
            card_view:cardUseCompatPadding="true"
            card_view:cardElevation="8dp">

            <RelativeLayout
                android:padding="16dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@android:color/white">


                <TextView
                    android:id="@+id/formItemTxt7"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="12dp"
                    android:textColor="@color/colorPrimary"
                    android:background="@drawable/line"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:gravity="center"
                    android:text="Existencia en Bodega"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:elevation="2dp" />


                <TableLayout
                    android:id="@+id/contenidoCabecera"
                    android:layout_below="@+id/formItemTxt7"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:dividerPadding="8dp">

                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="6dp">

                        <TextView
                            android:layout_margin="3dp"
                            android:layout_width="0dp"
                            android:layout_height="44dp"
                            android:layout_weight="1"
                            android:background="@drawable/header_fields"
                            android:gravity="center"
                            android:text="Código"
                            android:textStyle="bold"
                            android:textSize="14sp"
                            android:elevation="1dp" />

                        <TextView
                            android:id="@+id/infoExiCodigo"
                            android:layout_width="0dp"
                            android:layout_height="44dp"
                            android:layout_weight="3"
                            android:padding="12dp"
                            android:lines="1"
                            android:ellipsize="end"
                            android:hint="Código del producto"
                            android:textColor="@color/textColorPrimary"
                            android:textAppearance="?android:attr/textAppearanceSmall"
                            android:textSize="14sp" />
                    </TableRow>

                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="4dp">

                        <TextView
                            android:layout_margin="2dp"
                            android:layout_width="0dp"
                            android:layout_height="40dp"
                            android:layout_weight="1"
                            android:background="@drawable/header_fields"
                            android:gravity="center"
                            android:text="Cod. alterno"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/infoExiAlterno"
                            android:layout_width="0dp"
                            android:layout_height="40dp"
                            android:layout_weight="3"
                            android:padding="10dp"
                            android:ellipsize="end"
                            android:hint="Código alternativo"
                            android:textColor="@color/textColorPrimary"
                            android:textAppearance="?android:attr/textAppearanceSmall" />
                    </TableRow>

                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="4dp">

                        <TextView
                            android:layout_margin="2dp"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:background="@drawable/header_fields"
                            android:gravity="center"
                            android:text="Descripción"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/infoExiDescripcion"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="3"
                            android:padding="10dp"
                            android:maxLines="2"
                            android:ellipsize="end"
                            android:hint="Descripción del producto"
                            android:textColor="@color/textColorPrimary"
                            android:textAppearance="?android:attr/textAppearanceSmall" />
                    </TableRow>

                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="4dp">

                        <TextView
                            android:layout_margin="2dp"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:background="@drawable/header_fields"
                            android:gravity="center"
                            android:text="Presentación"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/infoExiPresentacion"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="3"
                            android:padding="10dp"
                            android:maxLines="2"
                            android:ellipsize="end"
                            android:hint="Presentación del producto"
                            android:textColor="@color/textColorPrimary"
                            android:textAppearance="?android:attr/textAppearanceSmall" />
                    </TableRow>

                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="4dp">

                        <TextView
                            android:layout_margin="2dp"
                            android:layout_width="0dp"
                            android:layout_height="40dp"
                            android:layout_weight="1"
                            android:background="@drawable/header_fields"
                            android:gravity="center"
                            android:text="Unidad"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/infoExiUnidad"
                            android:layout_width="0dp"
                            android:layout_height="40dp"
                            android:layout_weight="3"
                            android:padding="10dp"
                            android:maxLines="1"
                            android:ellipsize="end"
                            android:hint="Unidad de venta"
                            android:textColor="@color/textColorPrimary"
                            android:textAppearance="?android:attr/textAppearanceSmall" />
                    </TableRow>
                </TableLayout>


                <TableLayout
                    android:id="@+id/infoExiTableLayout"
                    android:layout_below="@+id/contenidoCabecera"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:layout_marginTop="12dp"
                    android:shrinkColumns="*"
                    android:stretchColumns="1">

                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="6dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="32dp"
                            android:gravity="center"
                            android:background="@drawable/header_fields"
                            android:text="#"
                            android:layout_marginLeft="1dp"
                            android:paddingLeft="12dp"
                            android:paddingRight="12dp" />

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="32dp"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:paddingLeft="16dp"
                            android:paddingRight="16dp"
                            android:layout_marginRight="1dp"
                            android:layout_marginLeft="1dp"
                            android:background="@drawable/header_fields"
                            android:text="Bodega" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="32dp"
                            android:gravity="center"
                            android:background="@drawable/header_fields"
                            android:text="Total"
                            android:layout_marginLeft="1dp"
                            android:paddingLeft="16dp"
                            android:paddingRight="16dp" />
                    </TableRow>

                    <!-- Aquí se agregarán dinámicamente más filas desde código -->

                </TableLayout>

                <!-- TOTALES -->
                <RelativeLayout
                    android:layout_below="@+id/infoExiTableLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingTop="4dp">

                    <TableLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:paddingTop="4dp"
                        android:dividerPadding="5dp">

                        <TableRow
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <TextView
                                android:id="@+id/col1"
                                android:layout_margin="5dp"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textAppearance="?android:attr/textAppearanceMedium"
                                android:textColor="@color/textColorPrimary"
                                android:textSize="16sp"
                                android:gravity="right"
                                android:text="TOTAL: "
                                android:textStyle="bold" />

                            <TextView
                                android:id="@+id/infoExiTotal"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:hint="0.0"
                                android:padding="5dp"
                                android:textStyle="bold"
                                android:textColor="@color/colorAccent"
                                android:textAppearance="?android:attr/textAppearanceMedium" />
                        </TableRow>
                    </TableLayout>
                </RelativeLayout>

            </RelativeLayout>
        </androidx.cardview.widget.CardView>
    </LinearLayout>
</ScrollView>
